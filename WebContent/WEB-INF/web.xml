<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>shable</display-name>
  <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>controller.index</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>controller.login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>statut</servlet-name>
    <servlet-class>controller.Statut</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>statut</servlet-name>
    <url-pattern>/statut</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>dashboard</servlet-name>
    <servlet-class>controller.Dashboard</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>dashboard</servlet-name>
    <url-pattern>/private/dashboard</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>new_classe</servlet-name>
    <servlet-class>controller.new_classe</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>new_classe</servlet-name>
    <url-pattern>/private/new_classe</url-pattern>
  </servlet-mapping>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Logging Area</web-resource-name>
      <description>
              Authentication for registered users. 
          </description>
      <url-pattern>/private/test/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
  <security-role>
    <role-name>*</role-name>
  </security-role>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login</form-login-page>
      <form-error-page>/login-failed</form-error-page>
    </form-login-config>
  </login-config>
</web-app>